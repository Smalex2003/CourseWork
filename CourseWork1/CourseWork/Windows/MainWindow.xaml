<Window x:Class="CourseWork.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork"
        mc:Ignorable="d"
        Title="Главное окно" Height="380" Width="550" Background="#D6D7C7">
    <Grid>
        <Label Content="Добро пожаловать" HorizontalAlignment="Center" Margin="0,35,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="25" FontWeight="Bold"/>
        <Label Content="выберите, действие!" HorizontalAlignment="Center" Margin="0,80,0,0" VerticalAlignment="Top" FontFamily="Comic Sans MS" FontSize="25" FontWeight="Bold"/>
        <Button x:Name="RegisterBtn" Foreground="#FFFF" Content="Регистрация" HorizontalAlignment="Left" Margin="143,152,0,0" VerticalAlignment="Top" Background="#929594" Click="RegisterBtn_Click" FontFamily="Comic Sans MS" FontSize="25" FontWeight="Normal" Width="252"/>
        <Button x:Name="AutorizationBtn" Foreground="#FFFF" Content="Авторизация" HorizontalAlignment="Left" Margin="143,217,0,0" VerticalAlignment="Top" Background="#929594" Click="AutorizationBtn_Click" FontFamily="Comic Sans MS" FontSize="25" FontWeight="Normal" Width="252"/>

    </Grid>
</Window>
